{
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
      "whitespace": true,
      "quotemark": [
        true,
        "single",
        "avoid-escape",
        "avoid-template"
      ],
      "no-var-requires": true,
      "ban-comma-operator": true,
      "no-async-without-await": true,
      "no-invalid-this": [
        true,
        "check-function-in-method"
      ],
      "no-shadowed-variable": true,
      "no-var-keyword": true,
      "unnecessary-constructor": true,
      "arrow-return-shorthand": true,
      "binary-expression-operand-order": true,
      "interface-name": [
        true,
        "always-prefix"
      ],
      "align": [
        true,
        "parameters",
        "statements"
      ],
      "eofline": true,
      "import-spacing": true,
      "indent": [
        true,
        "spaces",
        2
      ],
      "semicolon": [
        true,
        "always"
      ],
      "trailing-comma": [
        true,
        {
          "multiline": "always",
          "singleline": "never"
        }
      ],
      "no-unused-expression": false,
      "only-arrow-functions": false
    },
    "rulesDirectory": []
  }